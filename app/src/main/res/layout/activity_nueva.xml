<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nueva"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="itsco.edu.miagenda.NuevaActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp"
        android:id="@+id/txt_nombre"
        android:layout_alignParentEnd="true"
        android:hint="@string/hint_nombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txt_nombre"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:id="@+id/txt_telefono"
        android:layout_alignParentEnd="true"
        android:hint="@string/hint_telefono" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/txt_telefono"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp"
        android:id="@+id/txt_correo"
        android:layout_alignParentEnd="true"
        android:hint="@string/hint_correo" />

    <Button
        android:text="@string/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_correo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="101dp"
        android:id="@+id/btn_ok" />

    <Button
        android:text="@string/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_ok"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_cancelar" />
</RelativeLayout>
